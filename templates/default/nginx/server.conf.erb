server {
  server_name _; 
  server_name_in_redirect off;

  listen 80;

  <% @sites.each do |site| %>

  location /<%= site[:subdomain] %>/ {
    <% if site[:type] == :unicorn %>
    proxy_pass http://unicorn_<%= site[:site] %>/;
    <% else %>
    alias <%= site[:static_dir] %>/;
    <% end %>
  }

  <% end %>

  location /basic/ {
    proxy_pass http://sinatra/;
  }
}