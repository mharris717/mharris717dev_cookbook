#!/bin/bash

<% @sites.select { |x| x.bundle? }.each do |site| %>
cd <%= site.site_dir %> && bundle install
<% end %>

<% @sites.select { |x| x.setup_command }.each do |site| %>
cd <%= site.site_dir %> && <%= site.setup_command %>
<% end %>

<% @sites.select { |x| x.init? }.each do |site| %>
<%= site.init_file %>
<% end %>

nginx -s stop
nginx